*
	box-sizing border-box

body, p
	margin 0

*::-webkit-scrollbar {
	width: 6px !important;
}

*::-webkit-scrollbar-corner {
	background-color: transparent;
}

body
	font-family: "Lato";
	-webkit-font-smoothing: antialiased;

body:before
	background-image: url('https://static.wunderlist.com/8014578e445d50dc76a555be169ff8e281ad9729/images/backgrounds/1024/04.jpg')
	content: '';
	background-size: cover;
	background-position: center top;
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	z-index -1

.content
	height: 100vh;
	display flex
	&-left
		z-index 1
		width: 280px;
		background #f7f7f7
		.header
			height 45px
			background #3f7e7a
			.menu
				margin: 13px 11px 12px 11px;
				cursor pointer
		.avatar
			display flex
			align-items center
			margin: 5px 0;
			.logo
				width: 30px;
				border-radius: 50%;
				margin 6px
			.text
				font-size: 15px;
				color: #262626;
				margin 6px
		.lists
			.list
				height: 38px;
				display flex
				align-items: center;
				padding: 8px;
				cursor pointer
				&.selected
					background: #e0eefa;
				.icon
					margin: 3px;
					&.inbox
						fill: #2b8dec;
					&.starred
						fill: #db4c3f;
					&.today
						fill: #5fa004;
				.text
					font-size: 15px;
					color: #262626;
					margin 6px
	&-right
		flex 1
		display: flex;
		flex-direction: column;
		.header
			min-height 45px
			background #478f8a
			font-size: 20px;
			color: #fff;
			padding: 10px 14px;
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;
		.body
			margin 7px
			padding 7px
			overflow: auto;
			.section
				&:not(:first-child)
					margin-top 40px
				.title
					font-size 11px
					background: rgba(71,143,138,0.75);
					color: #fff;
					padding: 3px 10px;
					text-transform: uppercase;
					letter-spacing: 1px;
					display: inline-block;
					border-radius 3px
					margin-bottom 20px
				.links
					.link
						background: #fff;
						height: 46px;
						display flex
						align-items center
						font-size: 15px;
						margin-bottom: 1px;
						padding 14px
						border-radius 3px
						text-decoration none
						color #262626

.content-left.collapsed
	width: 42px;
	.text
		display none

@media (max-width: 550px)
	.content-right
		position: absolute;
		top: 0;
		bottom: 0;
		right: 0;
		left: 42px;









